float scale;
sampler Texture;

float4 ps_main( float4 color : COLOR0, float2 uv : TEXCOORD0 ) : COLOR
{
	float4 test = tex2D(Texture, uv) * scale;
    
    float maxVal = max(test.r, test.g);
    maxVal = max(maxVal, test.b);
    maxVal = max(maxVal, 1.0);
    
    test /= maxVal;
    return test;
}
