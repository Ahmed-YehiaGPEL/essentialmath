float4 constColor;
float4x4 IvModelViewProjectionMatrix;
struct VS_OUTPUT
{
	float4 pos : POSITION;
	float4 color : COLOR0;
};

VS_OUTPUT vs_main( float3 norm : NORMAL, float4 pos : POSITION )
{
    VS_OUTPUT Out = (VS_OUTPUT) 0;
    Out.pos = mul(pos, IvModelViewProjectionMatrix);
    Out.color.xyzw = constColor * clamp(-norm.x, 0.0, 1.0);
    return Out;
}

